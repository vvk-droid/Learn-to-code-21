#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
  int n,i,j,h;

    scanf("%d",&n);

    if(n>=1)
    {
        for(i=1;i<=n;i++)
        {
            for(j=1;j<(2*i)-1;j++)
            {
                printf(" ");
            }

            for(h=1;h<=(2*(n+1-i))-1;h++)
            {
                printf("* ");
            }
            printf("\n");
        }
    }

    else
    { 
         printf("ERROR");
    }

    return 0;

    
    
}
